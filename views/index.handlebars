<h1>Eat-Da-Burger!</h1>
<img scr="/public/assets/img/burger.jpeg" alt="image of a burger" class=image>

<h2>Add a Burger</h2>
<form class="create-form">

    <label for="ca">Add your Favorite Burger</label><br>
    <input type="text" id="burgerName" name="name">
  
  <button type="submit" class="submit btn">Add Burger to be Eaten!</button>
</form>
</div>

<div class="toEat">
<h2>Burgers to eat</h2>
  <ul>
    {{#each devoured}}
      {{#unless devoured}}
      <span class="li">{{this.butger_name}}
        <button class="change-devoured" data-id="{{this.id}}" data-newdevour="{{devoured}}">Eat up!</button>
        </span>
        <br>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="devoured">
  <h2>Burgers Devoured!</h2>
		<ul>
  {{#each burger}}
    {{#if devoured}}
      {{Devoured}}
      <br>
    {{/if}}
  {{/each}}
</ul>
</div>


